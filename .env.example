# Example env variables for Ridit
# Option A: point to a local service account file (do NOT commit this file)
FIREBASE_SERVICE_ACCOUNT_PATH=backend/serviceAccountKey.json

# Option B: paste the entire service account JSON as a single-line string (in CI / secrets)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type": "service_account", "project_id": "...", ...}

# Firebase DB URL (optional, defaults in config)
# FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Backend
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=True

# Admin
ADMIN_EMAIL=riditwebapp@gmail.com
ADMIN_JWT_SECRET=changeme-secret
